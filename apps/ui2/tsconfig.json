{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src",
    "vite.config.ts",
    "index.html"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "shared": [
        "../../packages/shared/dist/src/index"
      ],
      "@shared/*": [
        "../../packages/shared/dist/src/*"
      ]
    },
    "types": [
      "vite/client"
    ]
  }
}