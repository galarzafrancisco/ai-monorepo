    "/api/v1/authz/clients/register": {
      "post": {
        "description": "Implements RFC 7591 Dynamic Client Registration for OAuth 2.0. Validates client metadata, generates credentials, and persists the client configuration. Requires authorization_code and refresh_token grant types with PKCE support per MCP specification.",
        "operationId": "ClientRegistrationController_registerClient",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterClientDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Client registered successfully with generated credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientRegistrationResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid client metadata (missing fields, invalid redirect URIs, unsupported grant types, or PKCE not configured)"
          },
          "409": {
            "description": "A client with this name is already registered"
          }
        },
        "summary": "Register a new OAuth 2.0 client (Dynamic Client Registration)",
        "tags": [
          "Authorization Server"
        ]
      }
    },
    "/api/v1/authz/clients/{clientId}": {
      "get": {
        "description": "Returns the registration metadata for a client. The client_secret is NOT included in the response for security reasons.",
        "operationId": "ClientRegistrationController_getClient",
        "parameters": [
          {
            "name": "clientId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Client registration information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientRegistrationResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Client not found"
          }
        },
        "summary": "Retrieve client registration information",
        "tags": [
          "Authorization Server"
        ]
      }
    },
    "/api/v1/authz/clients": {
      "get": {
        "description": "Returns a list of all registered OAuth clients. Intended for administrative purposes. Client secrets are not included.",
        "operationId": "ClientRegistrationController_listClients",
        "parameters": [],
        "responses": {
          "200": {
            "description": "List of registered clients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ClientRegistrationResponseDto"
                  }
                }
              }
            }
          }
        },
        "summary": "List all registered clients (Admin)",
        "tags": [
          "Authorization Server"
        ]
      }
    }
  },
  "info": {
    "title": "AI Monorepo API",
    "description": "The AI Monorepo API description",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "ai-monorepo",
      "description": ""
    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "CreateTaskDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the task",
            "example": "Implement user authentication"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "example": "Add JWT-based authentication to the API"
          },
          "assignee": {
            "type": "string",
            "description": "Name of the assignee (for AI agents)",
            "example": "AgentAlpha"
          },
          "sessionId": {
            "type": "string",
            "description": "Session ID for tracking AI agent work",
            "example": "session-123-abc"
          }
        },
        "required": [
          "name",
          "description"
        ]
      },
      "CommentResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the comment",
            "example": "123e4567-e89b-12d3-a456-426614174001"
          },
          "taskId": {
            "type": "string",
            "description": "ID of the task this comment belongs to",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "commenterName": {
            "type": "string",
            "description": "Name of the person/agent who created the comment",
            "example": "AgentAlpha"
          },
          "content": {
            "type": "string",
            "description": "Content of the comment",
            "example": "Started working on this task"
          },
          "createdAt": {
            "type": "string",
            "description": "Comment creation timestamp",
            "example": "2025-11-03T10:30:00.000Z"
          }
        },
        "required": [
          "id",
          "taskId",
          "commenterName",
          "content",
          "createdAt"
        ]
      },
      "TaskResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the task",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "name": {
            "type": "string",
            "description": "Name of the task",
            "example": "Implement user authentication"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "example": "Add JWT-based authentication to the API"
          },
          "status": {
            "type": "string",
            "description": "Current status of the task",
            "enum": [
              "NOT_STARTED",
              "IN_PROGRESS",
              "FOR_REVIEW",
              "DONE"
            ],
            "example": "NOT_STARTED"
          },
          "assignee": {
            "type": "string",
            "description": "Name of the assignee (for AI agents)",
            "example": "AgentAlpha",
            "nullable": true
          },
          "sessionId": {
            "type": "string",
            "description": "Session ID for tracking AI agent work",
            "example": "session-123-abc",
            "nullable": true
          },
          "comments": {
            "description": "Comments associated with the task",
            "example": [
              {
                "id": "cmt-001",
                "taskId": "123e4567-e89b-12d3-a456-426614174000",
                "commenterName": "John Doe",
                "content": "Please prioritize this task.",
                "createdAt": "2025-11-03T11:00:00.000Z"
              }
            ],
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CommentResponseDto"
            }
          },
          "createdAt": {
            "type": "string",
            "description": "Task creation timestamp",
            "example": "2025-11-03T10:30:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Task last update timestamp",
            "example": "2025-11-03T12:45:00.000Z"
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "status",
          "comments",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpdateTaskDto": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Updated description of the task",
            "example": "Add JWT-based authentication with refresh tokens"
          }
        },
        "required": [
          "description"
        ]
      },
      "AssignTaskDto": {
        "type": "object",
        "properties": {
          "assignee": {
            "type": "object",
            "description": "Name of the assignee (can be empty to unassign)",
            "example": "AgentAlpha"
          },
          "sessionId": {
            "type": "string",
            "description": "Session ID for tracking AI agent work",
            "example": "session-123-abc"
          }
        }
      },
      "TaskListResponseDto": {
        "type": "object",
        "properties": {
          "items": {
            "description": "List of tasks",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TaskResponseDto"
            }
          },
          "total": {
            "type": "number",
            "description": "Total number of tasks matching the filters",
            "example": 42
          },
          "page": {
            "type": "number",
            "description": "Current page number",
            "example": 1
          },
          "limit": {
            "type": "number",
            "description": "Number of items per page",
            "example": 20
          },
          "totalPages": {
            "type": "number",
            "description": "Total number of pages",
            "example": 3
          }
        },
        "required": [
          "items",
          "total",
          "page",
          "limit",
          "totalPages"
        ]
      },
      "CreateCommentDto": {
        "type": "object",
        "properties": {
          "commenterName": {
            "type": "string",
            "description": "Name of the person or agent commenting",
            "example": "AgentBeta"
          },
          "content": {
            "type": "string",
            "description": "Content of the comment",
            "example": "Task completed successfully. All tests passing."
          }
        },
        "required": [
          "commenterName",
          "content"
        ]
      },
      "TaskChangeStatusDto": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "New status for the task",
            "enum": [
              "NOT_STARTED",
              "IN_PROGRESS",
              "FOR_REVIEW",
              "DONE"
            ],
            "example": "IN_PROGRESS"
          },
          "comment": {
            "type": "string",
            "description": "Comment required when marking task as done",
            "example": "All requirements met and tests passing"
          }
        },
        "required": [
          "status"
        ]
      },
      "CreatePageDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the wiki page",
            "example": "How to onboard new agents"
          },
          "content": {
            "type": "string",
            "description": "Markdown content of the page",
            "example": "# Welcome to Wikiroo\nThis is the onboarding guide."
          },
          "author": {
            "type": "string",
            "description": "Author of the page",
            "example": "Agent Roo"
          }
        },
        "required": [
          "title",
          "content",
          "author"
        ]
      },
      "PageResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the page",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "title": {
            "type": "string",
            "description": "Title of the wiki page",
            "example": "How to onboard new agents"
          },
          "content": {
            "type": "string",
            "description": "Markdown content of the wiki page",
            "example": "# Welcome to Wikiroo"
          },
          "author": {
            "type": "string",
            "description": "Author of the wiki page",
            "example": "Agent Roo"
          },
          "createdAt": {
            "type": "string",
            "description": "Creation timestamp",
            "example": "2025-01-01T12:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update timestamp",
            "example": "2025-01-02T15:30:00.000Z"
          }
        },
        "required": [
          "id",
          "title",
          "content",
          "author",
          "createdAt",
          "updatedAt"
        ]
      },
      "PageSummaryDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the page",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "title": {
            "type": "string",
            "description": "Title of the wiki page",
            "example": "How to onboard new agents"
          },
          "author": {
            "type": "string",
            "description": "Author of the wiki page",
            "example": "Agent Roo"
          },
          "createdAt": {
            "type": "string",
            "description": "Creation timestamp",
            "example": "2025-01-01T12:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update timestamp",
            "example": "2025-01-02T15:30:00.000Z"
          }
        },
        "required": [
          "id",
          "title",
          "author",
          "createdAt",
          "updatedAt"
        ]
      },
      "PageListResponseDto": {
        "type": "object",
        "properties": {
          "items": {
            "description": "List of wiki pages",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PageSummaryDto"
            }
          }
        },
        "required": [
          "items"
        ]
      },
      "RegisterClientDto": {
        "type": "object",
        "properties": {
          "client_name": {
            "type": "string",
            "description": "Human-readable name of the client",
            "example": "My OAuth Client"
          },
          "redirect_uris": {
            "description": "Array of redirect URIs for authorization callbacks (supports http and localhost for MCP clients)",
            "example": [
              "http://localhost:3000/callback",
              "https://example.com/callback"
            ],
            "type": "array",
            "items": {
              "type": "string"
            }
          },
