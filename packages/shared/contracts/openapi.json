    },
    "/api/v1/taskeroo/tasks/{id}/status": {
      "patch": {
        "operationId": "TaskerooController_changeStatus",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskChangeStatusDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status changed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status transition or comment required"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Change task status",
        "tags": [
          "Task"
        ]
      }
    },
