{
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "operationId": "AppController_getHello",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns a greeting message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Hello World!"
                }
              }
            }
          }
        },
        "summary": "Health check endpoint",
        "tags": [
          "App"
        ]
      }
    },
    "/taskeroo/tasks": {
      "post": {
        "operationId": "TaskerooController_createTask",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTaskDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          }
        },
        "summary": "Create a new task",
        "tags": [
          "taskeroo"
        ]
      },
      "get": {
        "operationId": "TaskerooController_listTasks",
        "parameters": [
          {
            "name": "assignee",
            "required": false,
            "in": "query",
            "description": "Filter tasks by assignee name",
            "schema": {
              "example": "AgentAlpha",
              "type": "string"
            }
          },
          {
            "name": "sessionId",
            "required": false,
            "in": "query",
            "description": "Filter tasks by session ID",
            "schema": {
              "example": "session-123-abc",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of tasks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskResponseDto"
                  }
                }
              }
            }
          }
        },
        "summary": "List tasks with optional filtering",
        "tags": [
          "taskeroo"
        ]
      }
    },
    "/taskeroo/tasks/{id}": {
      "patch": {
        "operationId": "TaskerooController_updateTask",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTaskDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Update task description",
        "tags": [
          "taskeroo"
        ]
      },
      "delete": {
        "operationId": "TaskerooController_deleteTask",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Task deleted successfully"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Delete a task",
        "tags": [
          "taskeroo"
        ]
      },
      "get": {
        "operationId": "TaskerooController_getTask",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Get a task by ID",
        "tags": [
          "taskeroo"
        ]
      }
    },
    "/taskeroo/tasks/{id}/assign": {
      "patch": {
        "operationId": "TaskerooController_assignTask",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AssignTaskDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task assigned successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Assign a task to someone",
        "tags": [
          "taskeroo"
        ]
      }
    },
    "/taskeroo/tasks/{id}/comments": {
      "post": {
        "operationId": "TaskerooController_addComment",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCommentDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Comment added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommentResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Add a comment to a task",
        "tags": [
          "taskeroo"
        ]
      }
    },
    "/taskeroo/tasks/{id}/status": {
      "patch": {
        "operationId": "TaskerooController_changeStatus",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangeStatusDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status changed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status transition or comment required"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Change task status",
        "tags": [
          "taskeroo"
        ]
      }
    }
  },
  "info": {
    "title": "AI Monorepo API",
    "description": "The AI Monorepo API description",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "ai-monorepo",
      "description": ""
    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "CreateTaskDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the task",
            "example": "Implement user authentication"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "example": "Add JWT-based authentication to the API"
          },
          "assignee": {
            "type": "string",
            "description": "Name of the assignee (for AI agents)",
            "example": "AgentAlpha"
          },
          "sessionId": {
            "type": "string",
            "description": "Session ID for tracking AI agent work",
            "example": "session-123-abc"
          }
        },
        "required": [
          "name",
          "description"
        ]
      },
      "TaskResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the task",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "name": {
            "type": "string",
            "description": "Name of the task",
            "example": "Implement user authentication"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "example": "Add JWT-based authentication to the API"
          },
          "status": {
            "type": "string",
            "description": "Current status of the task",
            "enum": [
              "not started",
              "in progress",
              "for review",
              "done"
            ],
            "example": "not started"
          },
          "assignee": {
            "type": "object",
            "description": "Name of the assignee (for AI agents)",
            "example": "AgentAlpha",
            "nullable": true
          },
          "sessionId": {
            "type": "object",
            "description": "Session ID for tracking AI agent work",
            "example": "session-123-abc",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "description": "Task creation timestamp",
            "example": "2025-11-03T10:30:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Task last update timestamp",
            "example": "2025-11-03T12:45:00.000Z"
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "status",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpdateTaskDto": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Updated description of the task",
            "example": "Add JWT-based authentication with refresh tokens"
          }
        },
        "required": [
          "description"
        ]
      },
      "AssignTaskDto": {
        "type": "object",
        "properties": {
          "assignee": {
            "type": "string",
            "description": "Name of the assignee",
            "example": "AgentAlpha"
          }
        },
        "required": [
          "assignee"
        ]
      },
      "CreateCommentDto": {
        "type": "object",
        "properties": {
          "commenterName": {
            "type": "string",
            "description": "Name of the person or agent commenting",
            "example": "AgentBeta"
          },
          "content": {
            "type": "string",
            "description": "Content of the comment",
            "example": "Task completed successfully. All tests passing."
          }
        },
        "required": [
          "commenterName",
          "content"
        ]
      },
      "CommentResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the comment",
            "example": "123e4567-e89b-12d3-a456-426614174001"
          },
          "taskId": {
            "type": "string",
            "description": "ID of the task this comment belongs to",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "commenterName": {
            "type": "string",
            "description": "Name of the person/agent who created the comment",
            "example": "AgentAlpha"
          },
          "content": {
            "type": "string",
            "description": "Content of the comment",
            "example": "Started working on this task"
          },
          "createdAt": {
            "type": "string",
            "description": "Comment creation timestamp",
            "example": "2025-11-03T10:30:00.000Z"
          }
        },
        "required": [
          "id",
          "taskId",
          "commenterName",
          "content",
          "createdAt"
        ]
      },
      "ChangeStatusDto": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "New status for the task",
            "enum": [
              "not started",
              "in progress",
              "for review",
              "done"
            ],
            "example": "in progress"
          },
          "comment": {
            "type": "string",
            "description": "Comment required when marking task as done",
            "example": "All requirements met and tests passing"
          }
        },
        "required": [
          "status"
        ]
      }
    }
  }
}