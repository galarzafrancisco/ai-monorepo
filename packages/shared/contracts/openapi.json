{
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "operationId": "AppController_getHello",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns a greeting message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Hello World!"
                }
              }
            }
          }
        },
        "summary": "Health check endpoint",
        "tags": [
          "App"
        ]
      }
    },
    "/taskeroo/tasks": {
      "post": {
        "operationId": "TaskerooController_createTask",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTaskDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          }
        },
        "summary": "Create a new task",
        "tags": [
          "Task"
        ]
      },
      "get": {
        "operationId": "TaskerooController_listTasks",
        "parameters": [
          {
            "name": "assignee",
            "required": false,
            "in": "query",
            "description": "Filter tasks by assignee name",
            "schema": {
              "example": "AgentAlpha",
              "type": "string"
            }
          },
          {
            "name": "sessionId",
            "required": false,
            "in": "query",
            "description": "Filter tasks by session ID",
            "schema": {
              "example": "session-123-abc",
              "type": "string"
            }
          },
          {
            "name": "page",
            "required": false,
            "in": "query",
            "description": "Page number (1-indexed)",
            "schema": {
              "default": 1,
              "example": 1,
              "type": "number"
            }
          },
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "description": "Items per page (1-100)",
            "schema": {
              "default": 20,
              "example": 20,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated list of tasks",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskListResponseDto"
                }
              }
            }
          }
        },
        "summary": "List tasks with optional filtering and pagination",
        "tags": [
          "Task"
        ]
      }
    },
    "/taskeroo/tasks/{id}": {
      "patch": {
        "operationId": "TaskerooController_updateTask",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTaskDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Update task description",
        "tags": [
          "Task"
        ]
      },
      "delete": {
        "operationId": "TaskerooController_deleteTask",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Task deleted successfully"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Delete a task",
        "tags": [
          "Task"
        ]
      },
      "get": {
        "operationId": "TaskerooController_getTask",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Get a task by ID",
        "tags": [
          "Task"
        ]
      }
    },
    "/taskeroo/tasks/{id}/assign": {
      "patch": {
        "operationId": "TaskerooController_assignTask",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AssignTaskDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task assigned successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Assign a task to someone",
        "tags": [
          "Task"
        ]
      }
    },
    "/taskeroo/tasks/{id}/comments": {
      "post": {
        "operationId": "TaskerooController_addComment",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCommentDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Comment added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommentResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Add a comment to a task",
        "tags": [
          "Task"
        ]
      }
    },
    "/taskeroo/tasks/{id}/status": {
      "patch": {
        "operationId": "TaskerooController_changeStatus",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Task UUID",
            "schema": {
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangeStatusDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status changed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status transition or comment required"
          },
          "404": {
            "description": "Task not found"
          }
        },
        "summary": "Change task status",
        "tags": [
          "Task"
        ]
      }
    },
    "/wikiroo/pages": {
      "post": {
        "operationId": "WikirooController_createPage",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePageDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Wiki page created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PageResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          }
        },
        "summary": "Create a new wiki page",
        "tags": [
          "Wikiroo"
        ]
      },
      "get": {
        "operationId": "WikirooController_listPages",
        "parameters": [],
        "responses": {
          "200": {
            "description": "List of wiki pages",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PageListResponseDto"
                }
              }
            }
          }
        },
        "summary": "List wiki pages without content",
        "tags": [
          "Wikiroo"
        ]
      }
    },
    "/wikiroo/pages/{id}": {
      "get": {
        "operationId": "WikirooController_getPage",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Wiki page identifier",
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "123e4567-e89b-12d3-a456-426614174000"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Wiki page retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PageResponseDto"
                }
              }
            }
          }
        },
        "summary": "Fetch a wiki page by ID",
        "tags": [
          "Wikiroo"
        ]
      }
    }
  },
  "info": {
    "title": "AI Monorepo API",
    "description": "The AI Monorepo API description",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "ai-monorepo",
      "description": ""
    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "CreateTaskDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the task",
            "example": "Implement user authentication"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "example": "Add JWT-based authentication to the API"
          },
          "assignee": {
            "type": "string",
            "description": "Name of the assignee (for AI agents)",
            "example": "AgentAlpha"
          },
          "sessionId": {
            "type": "string",
            "description": "Session ID for tracking AI agent work",
            "example": "session-123-abc"
          }
        },
        "required": [
          "name",
          "description"
        ]
      },
      "CommentResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the comment",
            "example": "123e4567-e89b-12d3-a456-426614174001"
          },
          "taskId": {
            "type": "string",
            "description": "ID of the task this comment belongs to",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "commenterName": {
            "type": "string",
            "description": "Name of the person/agent who created the comment",
            "example": "AgentAlpha"
          },
          "content": {
            "type": "string",
            "description": "Content of the comment",
            "example": "Started working on this task"
          },
          "createdAt": {
            "type": "string",
            "description": "Comment creation timestamp",
            "example": "2025-11-03T10:30:00.000Z"
          }
        },
        "required": [
          "id",
          "taskId",
          "commenterName",
          "content",
          "createdAt"
        ]
      },
      "TaskResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the task",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "name": {
            "type": "string",
            "description": "Name of the task",
            "example": "Implement user authentication"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "example": "Add JWT-based authentication to the API"
          },
          "status": {
            "type": "string",
            "description": "Current status of the task",
            "enum": [
              "NOT_STARTED",
              "IN_PROGRESS",
              "FOR_REVIEW",
              "DONE"
            ],
            "example": "NOT_STARTED"
          },
          "assignee": {
            "type": "string",
            "description": "Name of the assignee (for AI agents)",
            "example": "AgentAlpha",
            "nullable": true
          },
          "sessionId": {
            "type": "string",
            "description": "Session ID for tracking AI agent work",
            "example": "session-123-abc",
            "nullable": true
          },
          "comments": {
            "description": "Comments associated with the task",
            "example": [
              {
                "id": "cmt-001",
                "taskId": "123e4567-e89b-12d3-a456-426614174000",
                "commenterName": "John Doe",
                "content": "Please prioritize this task.",
                "createdAt": "2025-11-03T11:00:00.000Z"
              }
            ],
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CommentResponseDto"
            }
          },
          "createdAt": {
            "type": "string",
            "description": "Task creation timestamp",
            "example": "2025-11-03T10:30:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Task last update timestamp",
            "example": "2025-11-03T12:45:00.000Z"
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "status",
          "comments",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpdateTaskDto": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Updated description of the task",
            "example": "Add JWT-based authentication with refresh tokens"
          }
        },
        "required": [
          "description"
        ]
      },
      "AssignTaskDto": {
        "type": "object",
        "properties": {
          "assignee": {
            "type": "object",
            "description": "Name of the assignee (can be empty to unassign)",
            "example": "AgentAlpha"
          }
        }
      },
      "TaskListResponseDto": {
        "type": "object",
        "properties": {
          "items": {
            "description": "List of tasks",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TaskResponseDto"
            }
          },
          "total": {
            "type": "number",
            "description": "Total number of tasks matching the filters",
            "example": 42
          },
          "page": {
            "type": "number",
            "description": "Current page number",
            "example": 1
          },
          "limit": {
            "type": "number",
            "description": "Number of items per page",
            "example": 20
          },
          "totalPages": {
            "type": "number",
            "description": "Total number of pages",
            "example": 3
          }
        },
        "required": [
          "items",
          "total",
          "page",
          "limit",
          "totalPages"
        ]
      },
      "CreateCommentDto": {
        "type": "object",
        "properties": {
          "commenterName": {
            "type": "string",
            "description": "Name of the person or agent commenting",
            "example": "AgentBeta"
          },
          "content": {
            "type": "string",
            "description": "Content of the comment",
            "example": "Task completed successfully. All tests passing."
          }
        },
        "required": [
          "commenterName",
          "content"
        ]
      },
      "ChangeStatusDto": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "New status for the task",
            "enum": [
              "NOT_STARTED",
              "IN_PROGRESS",
              "FOR_REVIEW",
              "DONE"
            ],
            "example": "IN_PROGRESS"
          },
          "comment": {
            "type": "string",
            "description": "Comment required when marking task as done",
            "example": "All requirements met and tests passing"
          }
        },
        "required": [
          "status"
        ]
      },
      "CreatePageDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the wiki page",
            "example": "How to onboard new agents"
          },
          "content": {
            "type": "string",
            "description": "Markdown content of the page",
            "example": "# Welcome to Wikiroo\\nThis is the onboarding guide."
          },
          "author": {
            "type": "string",
            "description": "Author of the page",
            "example": "Agent Roo"
          }
        },
        "required": [
          "title",
          "content",
          "author"
        ]
      },
      "PageResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the page",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "title": {
            "type": "string",
            "description": "Title of the wiki page",
            "example": "How to onboard new agents"
          },
          "content": {
            "type": "string",
            "description": "Markdown content of the wiki page",
            "example": "# Welcome to Wikiroo"
          },
          "author": {
            "type": "string",
            "description": "Author of the wiki page",
            "example": "Agent Roo"
          },
          "createdAt": {
            "type": "string",
            "description": "Creation timestamp",
            "example": "2025-01-01T12:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update timestamp",
            "example": "2025-01-02T15:30:00.000Z"
          }
        },
        "required": [
          "id",
          "title",
          "content",
          "author",
          "createdAt",
          "updatedAt"
        ]
      },
      "PageSummaryDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the page",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "title": {
            "type": "string",
            "description": "Title of the wiki page",
            "example": "How to onboard new agents"
          },
          "author": {
            "type": "string",
            "description": "Author of the wiki page",
            "example": "Agent Roo"
          },
          "createdAt": {
            "type": "string",
            "description": "Creation timestamp",
            "example": "2025-01-01T12:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update timestamp",
            "example": "2025-01-02T15:30:00.000Z"
          }
        },
        "required": [
          "id",
          "title",
          "author",
          "createdAt",
          "updatedAt"
        ]
      },
      "PageListResponseDto": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PageSummaryDto"
            }
          }
        },
        "required": [
          "items"
        ]
      }
    }
  }
}
