{
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "taskeroo"
  ],
  "permissions": {
    "allow": [
      "SlashCommand",
      "Bash",
      "Read",
      "Write",
      "Edit",
      "mcp__taskeroo__list_tasks",
      "mcp__taskeroo__add_numbers",
      "mcp__taskeroo__get_task",
      "mcp__taskeroo__create_task",
      "mcp__taskeroo__assign_task",
      "mcp__taskeroo__add_comment",
      "mcp__taskeroo__mark_task_in_progress",
      "mcp__taskeroo__mark_task_for_review",
      "mcp__taskeroo__mark_task_done",
      "mcp__taskeroo__change_task_status"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/hooks/stop-comment.sh $(jq -r '.transcript_path')"
          }
        ]
      }
    ]
  }
}